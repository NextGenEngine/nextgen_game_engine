{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate: compile_commands.json",
      "type": "shell",
      "command": "bazel run @hedron_compile_commands//:refresh_all",
      "group": {
        "kind": "none",
        "isDefault": true
      }
    },
    {
      "label": "bazel: test config_manager_test",
      "type": "shell",
      "command": "bazel test //components/configuration:config_manager_test",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "bazel: benchmark config_manager_benchmark",
      "type": "shell",
      "command": "bazel run -c opt //components/configuration:config_manager_benchmark",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "bazel-build-debug: nextgen_game_engine",
      "type": "shell",
      "command": "bazel build --config=debug //components/engine:nextgen_game_engine",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "bazel-build-release-with-debug: nextgen_game_engine",
      "type": "shell",
      "command": "bazel build --config=releasewithdebug //components/engine:nextgen_game_engine",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
